<h1>Listing quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>A</th>
      <th>B</th>
      <th>C</th>
      <th>D</th>
      <th>Answer</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.question %></td>
        <td><%= quiz.opt1 %></td>
        <td><%= quiz.opt2 %></td>
        <td><%= quiz.opt3 %></td>
        <td><%= quiz.opt4 %></td>
        <td><%= quiz.answer %></td>
        <td><%= quiz.category %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

